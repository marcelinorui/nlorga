<% include ./../partials/header %>
<div class="row">
<div class="col-lg-offset-3 col-lg-6">
		<div class="title">
			<h2>Edit <b><%- account.displayname ? account.displayname : account.username %> 
				</b> Account </h2>
		</div>
	
			<form action="/admin/account/<%- account.idlogin%>/edit" method="post" class="form-horizontal">
				<div class="form-group">
					<div class="col-sm-3">
						<label for="username">Username</label>
					</div>
					<div class="col-sm-9">
					<input type="text" id="username" class="form-control" name="username" placeholder="Username" value="<%= account.username %>"
					/>
					</div>
				</div>
				<div class="form-group">
					<div class="col-sm-3">
					<label for="displayname">Display Name</label>
					</div>
					<div class="col-sm-9">
					<input type="text" id="displayname" class="form-control" name="displayname" placeholder="Display Name" value="<%= account.displayname %>"
					/>
					</div>
				</div>				
				<div class="form-group">
					<div class="col-sm-3">
						<label class="control-label" for="hascommanderTag">Commander Tag</label>
					</div>
					<div class="col-sm-3">
						<input type="checkbox" id="hascommanderTag" name="hascommanderTag" data-style="btn-group-sm" <% if (account.hascommanderTag == 1
						) {%> checked
						<% } %> />
					</div>
					<div class="col-sm-3">
						<label class="control-label" for="isAdmin">Administrator</label>
					</div>
					<div class="col-sm-3">
						<input type="checkbox" id="isAdmin" name="isAdmin" data-style="btn-group-sm" <% if (account.isAdmin == 1 ) {%> checked
						<% } %> />
					</div>					
				</div>
				<div class="form-group">
					<div class="col-sm-3">
						<label class="control-label">Created At</label>
					</div>
					<div class="col-sm-3">
						<span class="form-control-static"><%- getDate(account.createddate) %></span>
					</div>
					<div class="col-sm-3">
						<label class="control-label">Updated At</label>
					</div>
					<div class="col-sm-3">
						<span class="form-control-static"><%- getDate(account.updateddate) %></span>
					</div>
				</div>
				<hr>
				<div class="form-group">
					<div class="col-sm-3">
						<label class="control-label">Removed</label>
					</div>
					<div class="col-sm-3">
						<input type="checkbox" id="forDelete" name="forDelete" data-style="btn-group-sm" 
						<% if (getDate(account.enddate) != '9999-12-31') {%> 
						checked							
						<% } %> />
					</div>
					<% if (getDate(account.enddate) != '9999-12-31') {%>
					<div class="col-sm-3">
						<label class="control-label">Removed At</label>
					</div>
					<div class="col-sm-3">
						<span class="form-control-static"><%- getDate(account.enddate) %></span>
					</div>
					<% } %> 
				</div>
				<hr>
				<div class="form-group">
					<div class="col-lg-12">
						<div class=" pull-left">
							<a role="button" href="/admin/accounts" class="btn btn-default"> <span class="glyphicon glyphicon-arrow-left "></span> Back</a>
						</div>
						<div class=" pull-right">
							<button type="submit" id="btn-login" class="btn btn-primary"> <span class="glyphicon glyphicon-ok "></span> Save</button>
						</div>
					</div>
				</div>
			</form>
		</div>


<% include ./../partials/footer %>