<% include ./../partials/header %>
<h2>Participation</h2>
<hr>
<form action="/admin/participation" method="get" class="form-horizontal">		
	<div class="form-group">
		<div class="col-lg-2">
			<label for="startdate">Start Date</label>
			<div class="input-group date">
				<input id="startdate" name="startdate" type="text" class="form-control" value="<%= search.startdate%>" aria-describedby="startdate-addon"/>
				<div class="input-group-addon">
    				<span class="glyphicon glyphicon-calendar" id="startdate-addon"></span>
  				</div>		
			</div>
		</div>
		<div class="col-lg-2">
			<label for="enddate">End Date</label>
			<div class="input-group date">
				<input id="enddate" name="enddate" type="text" class="form-control" value="<%= search.enddate%>" aria-describedby="enddate-addon"/>
				 <div class="input-group-addon">
    				<span class="glyphicon glyphicon-calendar" id="enddate-addon"></span>
  				</div>		
			</div>
		</div>
	</div>
	<div class="row">
	<div class="col-lg-12">
		<div class="btn-group pull-right">
			<a href="/admin/participation/csv?startdate=<%=search.startdate%>&enddate=<%=search.enddate%>" class="btn btn-default">Download 
				<span class="glyphicon glyphicon-save"></span>
			</a>
			<button type="button" class="btn btn-default" id="btnClear">Clear
				<span class="glyphicon glyphicon-erase"></span>
			</button>
			<button type="submit" class="btn btn-default" id="btnSearch">Search
					<span class="glyphicon glyphicon-search"></span>
			</button>
		</div>	
	</div>
</div>
</form>	
<% if (participations.length > 0 ) {%>
<hr/>
<div class="mytable">
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>Username</th>
				<th>Displayname</th>
				<th>Participation</th>
				<th>Start Date</th>
				<th>End Date</th>
			</tr>
		</thead>
		<tbody>
		<% for(var i = 0; i < participations.length; i++){ %>
			<tr>
				<td><%= participations[i].username %></td>
				<td><%= participations[i].displayname %></td>
				<td><%= participations[i].participation %></td>
				<td><%= participations[i].startdate.toISOString().substring(0,10) %></td>
				<td><%= participations[i].enddate.toISOString().substring(0,10) %></td>
			</tr>
		<% }%>			
		</tbody>	
		<tfoot>			
		</tfoot>	
	</table>
</div>
<% }%> 
<% include ./../partials/end-body %>
<script>
$(function(){
	$('#btnClear').on('click',function(){
		$('#startdate').val('');
		$('#enddate').val('');
		
		$('#btnSubmit').click();
	});
	
	
});
</script>
<% include ./../partials/end-footer %>