
<div class="form-group">	
<% profile.professions.forEach(function(profession, idx){ %>
<div class="col-lg-4">
<div class="row">
	<div class="col-lg-4">
		<label class="control-label"><%- profession.name %></label>
	</div>
	<div class="col-lg-8">
		<span class="pull-right">
			<input type="checkbox" data-style="btn-group-sm" name="<%- profession.name %>" 
			<% if (profession.active === 1) {%>
				checked
			<% } %>
			/></span>
	</div>  	
	</div>		
</div>
		<%if ( (idx+1) % 3 == 0){%></div> <div class="form-group"> <%}%>
<% }); %>

</div>