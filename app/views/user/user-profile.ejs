<% include ./../partials/header %>
<div class="row">
		<div class="col-lg-12">
<form action="/user/profile" method="post" class="form-horizontal">
<div class="title">
		<h2>
			<b><% if ( profile.user.displayname ) {%> 
						<%- profile.user.displayname %> 
					<%} else  {%> 
						<%- profile.user.username %> 
					<%}%></b> Profile
		</h2>
		</div>
		<div class="form-group">
			<div class="col-lg-2">
				<label class="control-label" for="displayname">Username</label>
			</div>
			<div class="col-lg-10">
				<span class="control-help-text"><%- profile.user.username %> </span>
			</div>
		</div>
		<div class="form-group">
			<div class="col-lg-2">
			<label class="control-label" for="displayname">Display Name</label></div>
			<div class="col-lg-10">
				<input type="text" class="form-control" value="<% if ( profile.user.displayname ) {%><%- profile.user.displayname %><%} else  {%><%- profile.user.username %><%}%>" name="displayname" />
			</div>
		</div>
		<hr>
		<% include user-profile-professions %>
		<hr>
		<div class="form-group">
		<div class="col-lg-4">
			<div class="row">
				<div class="col-lg-4">
					<label class="control-label">Commander</label>
				</div>
				<div class="col-lg-8">
					<span class="pull-right">
							<input type="checkbox" data-style="btn-group-sm" name="hascommanderTag" 
							<% if (profile.user.hascommanderTag) {%>
								checked
							<% } %>
							/>
						
					<span>  			
				</div>
			</div>
		</div>
		</div>
		
		<div class="form-group">
			<div class="col-lg-12">
			<span class="pull-right">
				<button type="submit" class="btn btn-primary">Change Profile</button>
			</span>
			</div>
		</div>

</form>
</div></div>
<% include ./../partials/footer %>
