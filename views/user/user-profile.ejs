<% include partials/header %>

<form action="/user/profile" method="post" class="form-horizontal">
		<div class="title">
		<h2>
			<b><% include partials/display-username %></b> Profile
		</h2>
		</div>
		<div class="form-group">
			<div class="col-sm-2">
			<label class="control-label" for="displayname">Display Name</label></div>
			<div class="col-sm-10">
				<input type="text" class="form-control" value="<%- profile.user.displayname %>" name="displayname" />
			</div>
		</div>
		<hr>
		<% include user-profile-professions %>
		<hr>
		<div class="form-group">
			<div class="col-sm-4">
				<div class="col-sm-6">
					<label class="control-label">Commander</label>
				</div>
				<div class="col-sm-6">
					<span class="pull-right">
							<input type="checkbox" data-style="btn-group-sm" name="hascommanderTag" 
							<% if (profile.user.hascommanderTag) {%>
								checked
							<% } %>
							/>
						
					<span>  			
				</div>
			</div>
		</div>
		<div class="form-group">
			<div class="col-lg-12">
			<span class="pull-right">
				<button type="submit" class="btn btn-primary">Change Profile</button>
			</span>
			</div>
		</div>
</form>

<% include partials/footer %>
