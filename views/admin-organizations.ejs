		*/%>
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th>#</th>
					<th></th>
					<th></th>
					<th></th>
					<th>Created</th>
					<th>
						<div class="btn-group pull-right">
							<a href="/admin/organization/create" role="button" class="btn btn-primary btn-sm" data-toggle="tooltip" title="New Account">
								<span class="glyphicon glyphicon-plus"></span> New
							</a>
						</div>
					</th>
				</tr>
			</thead>
			<tbody>
				<% for(var i = 0; i < organizations.data.length; i++ ){ %>
					<tr>
						<td><%- organizations.data[i].idlogin %></td>
						<td><%- organizations.data[i].username %></td>
						<td><%- organizations.data[i].displayname %></td>
						<td><%- organizations.data[i].commanderTag %>
						<input type="checkbox" data-style="btn-group-sm" disabled 
							<% if (organizations.data[i].commanderTag == 1) {%>
								checked
							<% } %>
						/>
						</td>
						<td><input type="checkbox" data-style="btn-group-sm" disabled 
							<% if ( organizations.data[i].isAdmin == 1) {%>
								checked
							<% } %>
						/></td>
						<td><%- getDate(organizations.data[i].createddate) %></td>
						<td>
							
								<a href="/admin/account/<%-organizations.data[i].idlogin%>/edit" role="button" class="btn btn-success btn-sm" title="Edit" data-toggle="tooltip" >
								<span class="glyphicon glyphicon-search"></span> Edit
								</a>
								<a href="#" role="button" class="btn btn-warning btn-sm" title="Remove" data-toggle="modal" data-target="#modalremove<%-accounts.data[i].idlogin%>">
								<span class="glyphicon glyphicon-remove"></span> Remove
								</a>
								<div class="modal fade" id="modalremove<%-organizations.data[i].idlogin%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel<%-accounts.data[i].idlogin%>">
								<div class="modal-dialog" role="document">
									<div class="modal-content">
									<div class="modal-header">
										<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
										<h4 class="modal-title" id="myModalLabel<%-organizations.data[i].idlogin%>">Alert</h4>
									</div>
									<div class="modal-body">
										<p>Your about to remove <b><%- organizations.data[i].username %></b>.</p>
										<p>Are you sure ?</p>
									</div>
									<div class="modal-footer">
										<button type="button" class="btn btn-default" data-dismiss="modal">No</button>
										<button type="button" class="btn btn-primary">Yes</button>
									</div>
									</div>
								</div>
								</div>
							
						</td>					
					</tr>
				<% }%> 
			</tbody>
			<% if (organizations.data[0]) { %>
			<tfoot>
				<tr>
					<td colspan="<%- (Object.keys(organizations.data[0]).length +1 ) %>">
						<% var paginator = organizations; %>
						<% include partials/paginator %>
					</td>
				</tr>
			</tfoot>
			<% }%> 
		</table>
</div>
<% include partials/footer %>