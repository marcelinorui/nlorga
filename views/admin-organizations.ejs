					<label> </label>
					<input type="text" class="form-control">
				</div>
		</div>
		<br> 
		<div class="row">
			<div class="col-lg-offset-8 col-lg-4">
				<div class="btn-group pull-right">
					<button class="btn btn-default">Clear</button>
					<button type="submit" class="btn btn-default">Search</button>
				</div>	
			</div>
		</div>
